{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block title_link %}<a href="/">View Products</a>{% endblock %}

{% block body %}
<div class="wrapper">
    <h1>Order #{{ order.id }}</h1>

    <p><strong>Total:</strong> R {{ order.total | number_format }} with {{ order.totalItems }} item(s)</p>

    <table width="100%" border="1" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th>Product</th>
                <th width="10%">Quantity</th>
                <th width="20%">Total</th>
            </tr>
        </thead>
        <tbody>
            {% for product in order.products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.quantity }}</td>
                <td>R {{ product.price * product.quantity | number_format }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block json_data %}
    <style>
        pre {
            white-space: pre-wrap;       /* Since CSS 2.1 */
            white-space: -moz-pre-wrap;  /* Mozilla, since 1999 */
            white-space: -pre-wrap;      /* Opera 4-6 */
            white-space: -o-pre-wrap;    /* Opera 7 */
            word-wrap: break-word;
        }
    </style>
    <pre>CART :: {{ cart | json_encode }}</pre>
    <pre>ORDER :: {{ order | json_encode }}</pre>
{% endblock %}